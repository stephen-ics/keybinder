{
    "name": "keybinder",
    "version": "0.1.0",
    "main": "src/main.js",
    "scripts": {
        "dev:next": "next dev",
        "dev:electron": "wait-on tcp:3000 && electron .",
        "dev": "concurrently \"npm:dev:next\" \"npm:dev:electron\"",
        "start": "electron .",
        "build:next": "next build",
        "build:electron": "electron-builder",
        "build": "npm run build:next && npm run build:electron"
    },
    "build": {
        "appId": "com.stephenni.keybinder",
        "productName": "Keybinder",
        "directories": { "output": "dist" },
        "files": [ "out/**", "src/main.js", "package.json" ],
        "mac": { "target": "dmg" },
        "win": { "target": "nsis" },
        "linux": { "target": ["AppImage","deb"] }
    },
    "dependencies": {
        "@radix-ui/react-slot": "^1.2.2",
        "class-variance-authority": "^0.7.1",
        "clsx": "^2.1.1",
        "electron-store": "^8.1.0",
        "lucide-react": "^0.511.0",
        "next": "^15.3.2",
        "ps-list": "^8.0.0",
        "react": "^19.1.0",
        "react-dom": "^19.1.0",
        "tailwind-merge": "^3.3.0"
    },
    "devDependencies": {
        "@shadcn/ui": "^0.0.4",
        "@tailwindcss/cli": "^4.1.7",
        "@tailwindcss/postcss": "^4.1.7",
        "@types/node": "^22.15.18",
        "@types/react": "^19.1.4",
        "autoprefixer": "^10.4.21",
        "concurrently": "^9.1.2",
        "electron": "^26.0.0",
        "electron-builder": "^26.0.12",
        "postcss": "^8.5.3",
        "postcss-loader": "^8.1.1",
        "tailwindcss": "^3.4.17",
        "tw-animate-css": "^1.3.0",
        "typescript": "^5.8.3",
        "wait-on": "^8.0.3"
    },
    "description": "",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/stephen-ics/keybinder.git"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/stephen-ics/keybinder/issues"
    },
    "homepage": "https://github.com/stephen-ics/keybinder#readme"
}
